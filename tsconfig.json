{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "types": [
      "anu-vue/volar",
      "vite-plugin-pages/client",
      "vite-plugin-pwa/client",
      "vite-plugin-vue-layouts/client",
      "vite/client",
      "vitest",
      "vue/ref-macros"
    ]
  },
  "include": [
    "images/**/*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "references": [
    { "path": "./tsconfig.node.json" },
    { "path": "./tests/tsconfig.json" }
  ]
}
